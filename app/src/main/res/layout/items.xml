    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txt5"
        android:layout_weight="5" />

    <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txt6"
        android:layout_weight="5" />

    <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txt7"
        android:layout_weight="5" />

    <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txt8"
